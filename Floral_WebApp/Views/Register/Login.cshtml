@model Floral_WebApp.Models.Login

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_RegisterLayoutPage.cshtml";
}
@Html.Raw(ViewBag.error)



@using (Html.BeginForm("Login","Register",FormMethod.Post))
{



    <!-- Sing in  Form -->
    <section class="sign-in">
        <div class="container">
            <div class="signin-content">
                <div class="signin-image">
                    <figure><img src="~/Registerassets/images/signin-image.jpg" alt="sing up image"></figure>
                    <a href="~/Register/register" class="signup-image-link">Create an account</a>
                </div>

                <div class="signin-form">
                    <h2 class="form-title">Login</h2>
                 
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <form method="POST" class="register-form" id="login-form">
                        <div class="form-group">
                            <label for="your_name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                            @Html.EditorFor(model => model.U_Name, new { htmlAttributes = new { placeholder = "Your Name" } })
                            @Html.ValidationMessageFor(model => model.U_Name, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="your_pass"><i class="zmdi zmdi-lock"></i></label>
                            @Html.PasswordFor(model => model.U_Password, new { placeholder = " Password" })
                            @Html.ValidationMessageFor(model => model.U_Password, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group form-button">
                            <input type="submit" name="signin" id="signin" class="form-submit" value="Log in" />
                        </div>
                    </form>
                    <div class="social-login">
                        <span class="social-label">Or login with</span>
                        <ul class="socials">
                            <li><a href="#"><i class="display-flex-center zmdi zmdi-facebook"></i></a></li>
                            <li><a href="#"><i class="display-flex-center zmdi zmdi-twitter"></i></a></li>
                            <li><a href="#"><i class="display-flex-center zmdi zmdi-google"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
